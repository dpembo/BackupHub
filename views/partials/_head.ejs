<script>
  document.addEventListener('DOMContentLoaded', function() {
    var dropdownOptions = {
      hover: false, // Enable hover for dropdown trigger
    };
    
    var dropdownElem = document.querySelectorAll('.dropdown-trigger');
    var instances = M.Dropdown.init(dropdownElem, dropdownOptions);

    // Add an event listener to each dropdown trigger
    if(dropdownElem!==undefined)
    {
      dropdownElem.forEach(function(elem) {
        elem.addEventListener('mouseleave', function() {
          // Remove the focus when the mouse leaves the dropdown trigger
          this.blur();
        });
      });
    }
  });
</script>